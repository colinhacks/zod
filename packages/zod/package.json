{
  "name": "zod",
  "version": "3.25.67",
  "author": "Colin McDonnell <zod@colinhacks.com>",
  "description": "TypeScript-first schema declaration and validation library with static type inference",
  "files": ["_virtual", "index.js", "index.mjs", "index.d.ts", "v3", "v4", "v4-mini"],
  "funding": "https://github.com/sponsors/colinhacks",
  "homepage": "https://zod.dev",
  "keywords": ["typescript", "schema", "validation", "type", "inference"],
  "license": "MIT",
  "sideEffects": false,
  "main": "./index.js",
  "types": "./index.d.ts",
  "module": "./index.mjs",
  "exports": {
    ".": {
      "@zod/source": "./index.ts",
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./v3": {
      "@zod/source": "./v3/index.ts",
      "types": "./v3/index.d.ts",
      "import": "./v3/index.mjs",
      "require": "./v3/index.js"
    },
    "./v4": {
      "@zod/source": "./v4/index.ts",
      "types": "./v4/index.d.ts",
      "import": "./v4/index.mjs",
      "require": "./v4/index.js"
    },
    "./v4-mini": {
      "@zod/source": "./v4/mini/index.ts",
      "types": "./v4/mini/index.d.ts",
      "import": "./v4/mini/index.mjs",
      "require": "./v4/mini/index.js"
    },
    "./v4/mini": {
      "@zod/source": "./v4/mini/index.ts",
      "types": "./v4/mini/index.d.ts",
      "import": "./v4/mini/index.mjs",
      "require": "./v4/mini/index.js"
    },
    "./v4/core": {
      "@zod/source": "./v4/core/index.ts",
      "types": "./v4/core/index.d.ts",
      "import": "./v4/core/index.mjs",
      "require": "./v4/core/index.js"
    },
    "./v4/locales": {
      "@zod/source": "./v4/locales/index.ts",
      "types": "./v4/locales/index.d.ts",
      "import": "./v4/locales/index.mjs",
      "require": "./v4/locales/index.js"
    },
    "./v4/locales/*": {
      "@zod/source": "./v4/locales/*",
      "types": "./v4/locales/*",
      "import": "./v4/locales/*",
      "require": "./v4/locales/*"
    },
    "./package.json": "./package.json"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./index.ts",
      "./v3": "./v3/index.ts",
      "./v4": "./v4/index.ts",
      "./v4-mini": "./v4/mini/index.ts",
      "./v4/core": "./v4/core/index.ts",
      "./v4/locales": "./v4/locales/index.ts",
      "./v4/locales/*": "./v4/locales/*"
    },
    "sourceDialects": ["@zod/source"],
    "exclude": ["./**/*.test.ts"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinhacks/zod.git"
  },
  "bugs": {
    "url": "https://github.com/colinhacks/zod/issues"
  },
  "support": {
    "backing": {
      "npm-funding": true
    }
  },
  "scripts": {
    "clean": "rm -rf dist && git clean -xdf .",
    "build": "tsx ./zbuild.mts",
    "build:types": "pnpm tsc -p tsconfig.types.json",
    "postbuild": "pnpm biome check --write .",
    "test:watch": "pnpm vitest",
    "test": "pnpm vitest run",
    "test:attw": "pnpm vitest run",
    "bump:beta": "pnpm version \"v$(pnpm pkg get version | jq -r)-beta.$(date +%Y%m%dT%H%M%S)\"",
    "pub:beta": "pnpm bump:beta && pnpm publish --tag next --publish-branch v4 --no-git-checks --dry-run"
  }
}
