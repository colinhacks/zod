{
  "extends": "./.configs/tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "customConditions": ["@zod/source"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.mts", "**/*.cts"],
  "exclude": ["**/*.d.ts", "**/*.d.cts", "**/*.d.mts", "packages/docs"]
}
