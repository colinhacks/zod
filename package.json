{
  "private": true,
  "packageManager": "pnpm@9.1.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinhacks/zod.git"
  },
  "bugs": {
    "url": "https://github.com/colinhacks/zod/issues"
  },
  "support": {
    "backing": {
      "npm-funding": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/benchmark": "^2.1.5",
    "@types/chalk": "^2.2.0",
    "@types/node": "^20.0.0",
    "@web-std/file": "^3.0.3",
    "benchmark": "^2.1.4",
    "chalk": "^5.3.0",
    "console-table-printer": "^2.12.0",
    "dependency-cruiser": "^9.19.0",
    "execa": "^9.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mitata": "^0.1.11",
    "nodemon": "^2.0.22",
    "prettier": "^3.2.5",
    "rollup": "^4.18.0",
    "tinybench": "^2.8.0",
    "ts-morph": "^14.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.1",
    "typescript": "next",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "src/*.ts": ["biome format --write", "biome lint --apply"],
    "*.md": ["prettier --ignore-unknown --write"]
  },
  "scripts": {
    "format": "biome check --apply .",
    "format:check": "biome check .",
    "lint": "biome lint --apply .",
    "lint:check": "biome lint .",
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "build:deno": "pnpm run --filter zod build:deno",
    "build:esm": "pnpm run --filter zod build:esm",
    "build:cjs": "pnpm run --filter zod build:cjs",
    "build:types": "tsc -p ./.configs/tsconfig.types.json",
    "test:watch": "pnpm vitest",
    "test": "pnpm vitest run",
    "prepublishOnly": "pnpm run test && pnpm run build && pnpm run build:deno",
    "play": "nodemon -e ts,mts -w . -x ts-node playground.ts",
    "depcruise": "depcruise -c .dependency-cruiser.js src",
    "bench": "pnpm run build:cjs && ts-node benchmarks/index.ts",
    "prepare": "husky install"
  }
}
